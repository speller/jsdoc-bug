{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": "src",
        "includePattern": "\\.?js$",
        "excludePattern": "(node_modules/|docs/|__tests__)"
    },
    "plugins": [
        "node_modules/jsdoc-typeof-plugin",
        "node_modules/jsdoc-export-default-interop"
    ],
    "opts": {
        "template": "node_modules/better-docs",
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}
